<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:scrollbars="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:clickable="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:nestedScrollingEnabled="true"
        android:paddingBottom="10dp"
        tools:context=".fragment.FragmentUpdateMarker"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/myToolbar"
            android:layout_height="60dp"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"

            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/updatetitle_win"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:ems="10"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintTop_toBottomOf="@id/myToolbar" >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/titleupdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <ImageView
            android:id="@+id/icon_delete"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:importantForAccessibility="yes"
            app:srcCompat="@drawable/ic_delete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/updatetitle_win"
            android:layout_marginEnd="30dp"
            android:padding="16dp"
            app:tint="@color/md_theme_dark_errorContainer"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/updatedate_win"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Date"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/updatetitle_win"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dateupdate"
                android:clickable="true"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/updateabout_win"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="About"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/updatedate_win" >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/aboutupdate"
                android:maxLines = "6"
                android:minLines="1"
                android:scrollbars = "vertical"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:inputType="textMultiLine"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/latitude"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/bordershape"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/updateabout_win"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/longitude"
            android:background="@drawable/bordershape"
            android:padding="8dp"
            android:textSize="20sp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/latitude"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/update_marker_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Marker"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            app:layout_constraintTop_toBottomOf="@id/longitude" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_button_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/md_theme_dark_errorContainer"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            app:layout_constraintTop_toBottomOf="@id/longitude" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>