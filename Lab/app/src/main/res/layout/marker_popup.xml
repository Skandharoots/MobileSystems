<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:id="@+id/marker_popup_window"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_gravity="center"
    android:clickable="true">
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/exit"
        android:text="X"
        android:textStyle="bold"
        android:textColor="?attr/colorAccent"
        android:layout_gravity="end"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_circle"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/marker_titletxt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Title"
        android:textAppearance="?attr/textAppearanceHeadline6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exit" />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/marker_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:padding="8dp"
            android:gravity="center"
            android:background="@drawable/bordershape"
            android:textAppearance="?attr/textAppearanceBody1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/marker_titletxt" />
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/marker_abouttxt"
        android:layout_gravity="center"
        android:text="About"
        android:padding="8dp"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/marker_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:id="@+id/marker_about"
            android:layout_gravity="center"
            android:padding="8dp"
            android:gravity="center"
            android:background="@drawable/bordershape"
            android:textAppearance="?attr/textAppearanceBody1"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/marker_abouttxt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

</androidx.constraintlayout.widget.ConstraintLayout>